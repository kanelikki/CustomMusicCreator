<Window x:Class="PanPakapon.ConvertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PanPakapon"
        mc:Ignorable="d" Height="400" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        WindowStyle="None"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="571*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
            <RowDefinition Height="56"/>
        </Grid.RowDefinitions>
        <Label Content="[ Log ]" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="0" Height="53"/>
        <RichTextBox Grid.Row="1" Margin="24,24,1,24" IsReadOnly="true" Name="LogBox" VerticalScrollBarVisibility="Visible">
            <FlowDocument>
            </FlowDocument>
        </RichTextBox>
        <Button Grid.Row="1" Content="Close" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Height="36" IsEnabled="False" Name="CloseButton" Margin="247,258,0,0" Grid.RowSpan="2" Click="CloseWindow"/>
    </Grid>
</Window>
